#pragma once
#include <time.h>
#include <stdbool.h>
#include <stdio.h>

#define test_void(f) \
({ \
		printf("==================================\n"); \
		printf("[Test] of \"%s\"\n", #f); \
		printf("Type: void"); \
		clock_t fst = clock(); \
		f(); \
		clock_t snd = clock(); \
		printf("Function run time: %f s\n", (snd-fst) * 1.0 / CLOCKS_PER_SEC); \
		printf("=================================="); \
})

void test(bool); 
